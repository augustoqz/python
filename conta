
def divisao():
    div1 = int(input("Digite um numero para dividir: "))
    div2 = int(input("Digite outro numero: "))
    print(f"{div1} / {div2} = ")
    
mul1 = int(input("Digite um numero para multiplicar: "))
mul2 = int(input("Digite outro numero: "))

def multiplicacao():
    resultado = mul1 / mul2
    print(f"O resultado da conta deu: {resultado}")

opcao = input("Escolha uma opção:")


def main():
    while True:
        print("\n===== Menu de Opções =====")
        print("1. Multiplica")
        print("2. Divide")
 

        opcao = input("Escolha uma opção:")
        if opcao == "1":
            multiplicacao()
        elif opcao == "2":
            divisao()


main()
multiplicacao()
divisao()

